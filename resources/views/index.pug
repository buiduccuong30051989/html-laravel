extends partials/layout

block main
    div#carousel-example-generic.carousel.slide
        ol.carousel-indicators
            each val in [0, 1]
                if val == 0
                    li(
                        data-target='#carousel-example-generic'
                        data-slide-to=val
                        class='ind active'
                    )
                else
                    li(
                        data-target='#carousel-example-generic'
                        data-slide-to=val
                        class='ind'
                    )
        div.carousel-inner
            each val in [0, 1, 2]
                if val == 0
                    div.item.active
                        img(src="public/images/slide-01.jpg" alt="")
                else
                    div.item
                        img(src="public/images/slide-02.jpg" alt="")

